{
	"name": "server",
	"type": "module",
	"main": "src/index.ts",
	"scripts": {
		"build": "tsdown",
		"check-types": "tsc -b",
		"compile": "bun build --compile --minify --sourcemap --bytecode ./src/index.ts --outfile server",
		"dev": "bun run --hot src/index.ts",
		"start": "bun run dist/index.mjs"
	},
	"dependencies": {
		"@gityap/api": "workspace:*",
		"@gityap/db": "workspace:*",
		"@gityap/env": "workspace:*",
		"@hono/trpc-server": "^0.4.0",
		"@trpc/server": "catalog:",
		"dotenv": "catalog:",
		"hono": "catalog:",
		"zod": "catalog:"
	},
	"devDependencies": {
		"@gityap/config": "workspace:*",
		"@types/bun": "catalog:",
		"tsdown": "^0.16.5",
		"typescript": "catalog:"
	}
}
